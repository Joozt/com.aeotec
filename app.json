  "drivers": [
    {
      "id": "ZW088",
      "name": {
        "en": "Key Fob"
      },
      "class": "button",
      "capabilities": [
        "measure_battery"
      ],
      "images": {
        "large": "/drivers/ZW088/assets/images/large.png",
        "small": "/drivers/ZW088/assets/images/small.png"
      },
      "zwave": {
        "manufacturerId": 134,
        "productTypeId": [
          1,
          257,
          513
        ],
        "productId": [
          22,
          88
        ],
        "zwaveAllianceProductId": 1178,
        "zwaveAllianceProductDocumentation": "https://Products.Z-WaveAlliance.org/ProductManual/File?folder=&filename=Manuals/1178/Instructions - Aeon Labs Key Fob Gen5 MCert.pdf",
        "learnmode": {
          "image": "/drivers/ZW088/assets/learnmode.svg",
          "instruction": {
            "en": "Short press the \"Include\" button on the Key Fob",
            "nl": "Druk kort op de \"Include\" knop op de Key Fob"
          }
        },
        "unlearnmode": {
          "instruction": {
            "en": "Short press the \"Exclude\" button on the Key Fob",
            "nl": "Druk kort op de \"Exclude\" knop op de Key Fob"
          }
        },
        "associationGroups": [
          1
        ],
        "associationGroupsOptions": {
          "1": {
            "hint": {
              "en": "Group 1 is assigned to the Lifeline association group and every device has 5 nodes to associate.\nWhen the Key Fob is in Scene Mode, pressing the control button, which will send the corresponding Scene id to the associated nodes. "
            }
          }
        },
        "defaultConfiguration": [
          {
            "id": 250,
            "size": 1,
            "value": 1
          }
        ]
      },
      "settings": [
        {
          "id": "poll_interval",
          "type": "number",
          "label": {
            "en": "Poll Interval",
            "nl": "Poll Interval"
          },
          "hint": {
            "en": "This parameter ({{zwaveParameterIndex}}) determines the amount of seconds between asking the device for a status update.",
            "nl": "Deze parameter ({{zwaveParameterIndex}}) bepaalt het aantal seconden tussen het opvragen van een status update aan het apparaat."
          },
          "attr": {
            "min": 60,
            "max": 3600
          },
          "value": 240
        }
      ]
    }
  ]
